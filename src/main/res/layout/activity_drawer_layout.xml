<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:liumeng="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dl_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--写主界面-->
    <LinearLayout
        android:background="@color/asgreen"
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--指示器-->
        <com.example.liumeng.quanminfu2.view.PagerSlidingTab
            liumeng:underlineColor="@color/golden"
            liumeng:indicatorColor="@color/golden"
            android:id="@+id/pst_main_title"
            android:layout_width="match_parent"
            android:layout_height="45dp">

        </com.example.liumeng.quanminfu2.view.PagerSlidingTab>
        <!--显示内容-->
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_main_shows"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
    </LinearLayout>

    <!--写侧滑菜单-->
    <FrameLayout
        android:id="@+id/fl_main_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left">

        <include layout="@layout/menu_list"/>
    </FrameLayout>


</android.support.v4.widget.DrawerLayout>